---
import BaseHead from "../components/BaseHead.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
interface Props {
  title?: string;
  description?: string;
  oneCol?: boolean;
}

const {
  title = SITE_TITLE,
  description = SITE_DESCRIPTION,
  oneCol,
} = Astro.props;
---

<!doctype html>
<html id="root" lang="en" class="bg-main">
  <head>
    <BaseHead title={title} description={description} />
  </head>
  <body
    class:list={[
      "mx-auto p-10",
      { "max-w-5xl": !oneCol },
      { "max-w-3xl": oneCol },
    ]}
  >
    <slot />
  </body>
</html>
